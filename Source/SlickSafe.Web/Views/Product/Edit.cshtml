@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" name="viewport"
          content="text/html; charset=UTF-8; width=device-width, initial-scale=1.0">
    <title>Edit</title>

    <style rel="stylesheet" type="text/css">
    </style>
</head>
<body>
    <!-- Modal -->
    <div class="modal-body">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h3 id="myModalLabel">产品属性</h3>
        </div>
        <div class="modal-body">
            <div class="row-fluid">
                <p>
                    <span class="a_tit">名称:</span>
                    <span><input type="text" id="txtProductName" class="form-control" style="width:340px;" /></span>
                </p>
                <p>
                    <span class="a_tit">类型:</span>
                    <select id="ddlProductType" class="form-control" style="width:280px;">
                        <option value="default" disabled selected>--请选择--</option>
                        <option value="手机">手机</option>
                        <option value="苹果">苹果</option>
                        <option value="小汽车">小汽车</option>
                        <option value="电脑">电脑</option>
                        <option value="飞机">飞机</option>
                        <option value="轮船">轮船</option>
                    </select>
                </p>
                <p>
                    <span class="a_tit">编码:</span>
                    <span><input type="text" id="txtProductCode" class="form-control" style="width:340px;" /></span>
                </p>
                <p>
                    <span class="a_tit">单价:</span>
                    <span><input type="text" id="txtUnitPrice" class="form-control" style="width:340px;" /></span>
                </p>
                <p>
                    <span class="a_tit">描述:</span>
                    <span><input type="text" id="txtNotes" class="form-control" style="width:340px;" /></span>
                </p>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-primary" onclick="productlist.sure();">确定</button>
            <button class="btn" data-dismiss="modal" aria-hidden="true">取消</button>
        </div>
    </div>
    <script type="text/javascript">
        $(function () {
            productlist.getProductByID();
        })
    </script>

</body>
</html>
